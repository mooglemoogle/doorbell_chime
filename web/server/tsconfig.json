{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "@app": [""],
            "@app/*": ["*"],
            "@app/routes/*": ["routes/*"]
        },
        "plugins": [{ "transform": "typescript-transform-paths" }]
    },
    "include": ["./**/*"],
}
